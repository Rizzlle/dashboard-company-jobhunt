generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Job {
  id             String   @id @default(cuid())
  roles          String
  datePosted     DateTime @default(now())
  dueDate        DateTime
  jobType        String
  applicants     Int
  needs          Int
  salaryFrom     String
  salaryTo       String
  jobCategory    String
  requiredSkills Json[]
  description    String
  responsibility String
  whoYouAre      String
  niceToHaves    String
  benefits       Json
  company        Company? @relation(fields: [companyId], references: [id])
  companyId      String?
}

model Companyoverview {
  id          String   @id @default(cuid())
  image       String
  name        String
  website     String
  location    String
  employee    String
  industry    String
  dateFounded DateTime
  techStack   String[]
  description String
  company     Company? @relation(fields: [companyId], references: [id])
  companyId   String?
}

model Company {
  id              String            @id @default(cuid())
  name            String
  password        String
  email           String            @unique
  jobs            Job[]
  companyOverview Companyoverview[]
}
